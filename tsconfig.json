{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "declarationDir": "dist",
    "lib": [
      "es5",
      "es2015",
      "es2017"
    ],
    "module": "commonjs",
    "strict": true,
    "outDir": "dist",
    "sourceMap": false,
    "types": [
      "node",
      "jest"
    ],
    "suppressImplicitAnyIndexErrors": true,
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.test.ts"
  ],
}